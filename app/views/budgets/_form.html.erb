
<div class="models-forms">
<%= simple_form_for(@budget) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :trans_type,collection:[:withdraw,:deposit] %>
    <%= f.input :amount %>
    <%= f.input :repeat, as: :boolean %>
  
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>

</div>
